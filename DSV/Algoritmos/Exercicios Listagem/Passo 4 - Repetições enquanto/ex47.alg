algoritmo "ex47"
// Data : 07/09/2020
// Seção de Declarações
var
   c, soma:inteiro
inicio
// Seção de Comandos
   c <- 550

   escreva ("Calculando:   ")
   enquanto (c > 0)faca
             c <- c - 50
             soma <- soma + c
             escreva (c, " +")

   fimenquanto
   escreval ("  ")
   escreval ("O resultado da soma é: ",soma)
fimalgoritmo
